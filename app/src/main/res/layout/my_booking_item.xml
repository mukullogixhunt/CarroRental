<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_4sdp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ========================================================= -->
        <!-- ==  STATE 1: PENDING / UPCOMING                         == -->
        <!-- ========================================================= -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_pending_upcoming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tv_booking_id_pending"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_status_pending"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Booking ID: CR0001" />

            <TextView
                android:id="@+id/tv_status_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@drawable/bg_status_pending"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_3sdp"
                android:textColor="@color/orange"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_booking_id_pending"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_booking_id_pending"
                tools:text="Pending" />

            <TextView
                android:id="@+id/tv_service_name_pending"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/primary"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_booking_id_pending"
                app:layout_constraintTop_toBottomOf="@+id/tv_booking_id_pending"
                tools:text="One Way Cab Service" />

            <TextView
                android:id="@+id/tv_pickup_location_pending"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="@dimen/_6sdp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/_11ssp"
                app:drawableTint="@color/primary"
                app:layout_constraintEnd_toEndOf="@+id/tv_status_pending"
                app:layout_constraintStart_toStartOf="@+id/tv_service_name_pending"
                app:layout_constraintTop_toBottomOf="@+id/tv_service_name_pending"
                tools:text="Smriti Nagar, Bhilai, Chhattisgarh" />

            <TextView
                android:id="@+id/tv_datetime_pending"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:drawableStart="@drawable/ic_calender"
                android:drawablePadding="@dimen/_6sdp"
                android:gravity="center_vertical"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/_11ssp"
                app:drawableTint="@color/primary"
                app:layout_constraintStart_toStartOf="@+id/tv_pickup_location_pending"
                app:layout_constraintTop_toBottomOf="@+id/tv_pickup_location_pending"
                app:layout_constraintEnd_toEndOf="@+id/tv_status_pending"
                tools:text="20 Aug 2025, 10:10 AM" />

            <View
                android:id="@+id/divider_pending"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/divider_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_datetime_pending" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_pending">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cancel_pending"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cancel"
                    android:textStyle="bold"
                    android:textColor="@color/red" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:background="@color/divider_color" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_details_pending"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/see_details"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ========================================================= -->
        <!-- ==  STATE 2: ACCEPTED / CURRENT                       == -->
        <!-- ========================================================= -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_accepted_current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">
            <!-- This layout will be similar, add views as needed for live location, fleet, etc. -->
            <!-- Example: -->
            <TextView
                android:id="@+id/tv_booking_id_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Booking ID: CR0002" />

            <TextView
                android:id="@+id/iv_live_location"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:drawableEnd="@drawable/ic_live_location"
                android:drawableTint="@color/green"
                android:text="Live Location"
                android:textStyle="bold"
                android:drawablePadding="@dimen/_3sdp"
                android:textColor="@color/green"
                app:tint="@color/green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_booking_id_current"
                app:layout_constraintBottom_toBottomOf="@+id/tv_booking_id_current"/>



            <TextView
                android:id="@+id/tv_service_name_current"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/primary"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_booking_id_current"
                app:layout_constraintTop_toBottomOf="@+id/tv_booking_id_current"
                app:layout_constraintEnd_toEndOf="@+id/iv_live_location"
                tools:text="One Way Cab Service" />


            <TextView
                android:id="@+id/tv_pickup_location_current"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="@dimen/_6sdp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/_11ssp"
                app:drawableTint="@color/primary"
                app:layout_constraintEnd_toEndOf="@+id/iv_live_location"
                app:layout_constraintStart_toStartOf="@+id/tv_service_name_current"
                app:layout_constraintTop_toBottomOf="@+id/tv_service_name_current"
                tools:text="Smriti Nagar, Bhilai, Chhattisgarh" />

            <TextView
                android:id="@+id/tv_datetime_current"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:drawableStart="@drawable/ic_calender"
                android:drawablePadding="@dimen/_6sdp"
                android:gravity="center_vertical"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/_11ssp"
                app:drawableTint="@color/primary"
                app:layout_constraintEnd_toEndOf="@+id/iv_live_location"
                app:layout_constraintStart_toStartOf="@+id/tv_pickup_location_current"
                app:layout_constraintTop_toBottomOf="@+id/tv_pickup_location_current"
                tools:text="20 Aug 2025, 10:10 AM" />

            <!-- FLEET (CAR) DETAILS -->
            <TextView
                android:id="@+id/tv_fleet_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:drawableStart="@drawable/ic_car"
                android:drawablePadding="@dimen/_6sdp"
                android:gravity="center_vertical"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/_11ssp"
                app:drawableTint="@color/primary"
                app:layout_constraintEnd_toEndOf="@+id/iv_live_location"
                app:layout_constraintStart_toStartOf="@+id/tv_datetime_current"
                app:layout_constraintTop_toBottomOf="@+id/tv_datetime_current"
                tools:text="Maruti Swift (CG04AB1234)" />

            <!-- CHAUFFEUR (DRIVER) DETAILS -->
            <TextView
                android:id="@+id/tv_chauffeur_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:drawableStart="@drawable/ic_driver"
                android:drawablePadding="@dimen/_6sdp"
                android:gravity="center_vertical"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/_11ssp"
                app:drawableTint="@color/primary"
                app:layout_constraintEnd_toEndOf="@+id/iv_live_location"
                app:layout_constraintStart_toStartOf="@+id/tv_fleet_details"
                app:layout_constraintTop_toBottomOf="@+id/tv_fleet_details"
                tools:text="Ramesh Kumar (9876543210)" />

            <View
                android:id="@+id/divider_current"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/divider_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_chauffeur_details" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_current">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_call_emg_current"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/_24_x_7_helpline"
                    android:textColor="@color/green" />

                <View
                    android:id="@+id/divide2"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:background="@color/divider_color" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_details_current"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="@string/see_details"
                    android:textColor="@color/primary" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ========================================================= -->
        <!-- ==  STATE 3: COMPLETED / CANCELLED                    == -->
        <!-- ========================================================= -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_completed_cancelled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tv_booking_id_completed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_status_completed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Booking ID: CR0003" />

            <TextView
                android:id="@+id/tv_status_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@drawable/bg_status_completed"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_3sdp"
                android:textColor="@color/green"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_booking_id_completed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_booking_id_completed"
                tools:text="Completed" />

            <TextView
                android:id="@+id/tv_service_name_completed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/primary"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_booking_id_completed"
                app:layout_constraintTop_toBottomOf="@+id/tv_booking_id_completed"
                tools:text="Self Drive Service" />


            <TextView
                android:id="@+id/tv_pickup_location_completed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="@dimen/_6sdp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/_11ssp"
                app:drawableTint="@color/primary"
                app:layout_constraintEnd_toEndOf="@+id/tv_status_completed"
                app:layout_constraintStart_toStartOf="@+id/tv_service_name_completed"
                app:layout_constraintTop_toBottomOf="@+id/tv_service_name_completed"
                tools:text="Smriti Nagar, Bhilai, Chhattisgarh" />

            <TextView
                android:id="@+id/tv_datetime_completed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:drawableStart="@drawable/ic_calender"
                android:drawablePadding="@dimen/_6sdp"
                android:gravity="center_vertical"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/_11ssp"
                app:drawableTint="@color/primary"
                app:layout_constraintEnd_toEndOf="@+id/tv_status_completed"
                app:layout_constraintStart_toStartOf="@+id/tv_pickup_location_completed"
                app:layout_constraintTop_toBottomOf="@+id/tv_pickup_location_completed"
                tools:text="22 Aug 2025, 06:30 PM" />

            <View
                android:id="@+id/divider_completed"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/divider_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_datetime_completed" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_details_completed"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/see_details"
                android:textColor="@color/primary"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_completed" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

