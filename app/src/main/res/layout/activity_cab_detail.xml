<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.CabDetailActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/layout_toolbar"
                android:id="@+id/toolbar"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:background="@color/primary_field" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_10sdp" />

            <LinearLayout
                android:id="@+id/lvNoCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_no_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/buses_not_found"
                    android:textSize="@dimen/_14ssp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvPickAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/primary_dark1"
                android:drawableStart="@drawable/ic_location"
                android:gravity="center"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_12sdp"
                android:drawablePadding="@dimen/_8sdp"
                android:text="@string/your_adress"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp" />

            <LinearLayout
                android:id="@+id/lvMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cdCarDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="@dimen/_5sdp">


                    <LinearLayout
                        android:id="@+id/lv_carDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_10sdp"

                        android:visibility="visible">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.8"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_car_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15ssp"
                                    android:textStyle="bold"
                                    tools:text="Toyota Etios or\nEquivalent" />

                                <TextView
                                    android:id="@+id/tv_price"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="\u20B9 2258"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:textColor="@color/primary_dark1"
                                    android:textSize="@dimen/_20ssp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_offer_price"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="\u20B9 2742"
                                    android:textColor="@color/secondary2"
                                    android:textSize="@dimen/_15ssp"
                                    android:textStyle="bold" />



                            </LinearLayout>


                            <ImageView
                                android:id="@+id/iv_vehicle"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_weight="1"
                                android:scaleType="fitCenter"
                                tools:src="@drawable/demo_car" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"

                            android:orientation="horizontal">



                            <TextView
                                android:id="@+id/tv_vehicle_seats"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginHorizontal="@dimen/_2sdp"
                                android:drawableStart="@drawable/ic_seats"
                                android:drawablePadding="@dimen/_3sdp"
                                android:gravity="start"
                                android:maxLines="1"
                                tools:text="0 Seats"
                                android:textColor="@color/gray_light"
                                android:textSize="@dimen/_13ssp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_fuel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.05"
                                tools:text="fuel"
                                android:drawableStart="@drawable/ic_fuel"
                                android:drawablePadding="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_2sdp"

                                android:textColor="@color/gray_light"
                                android:textSize="@dimen/_13ssp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_vehicle_bags"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginHorizontal="@dimen/_2sdp"
                                android:drawablePadding="@dimen/_3sdp"

                                android:drawableStart="@drawable/ic_luggage"
                                android:gravity="start"
                                android:maxLines="1"
                                tools:text="0 Bags"
                                android:textColor="@color/gray_light"
                                android:textSize="@dimen/_13ssp"
                                android:textStyle="bold" />

<!--                            <TextView
                                android:id="@+id/tv_ac"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:drawablePadding="@dimen/_3sdp"

                                android:drawableStart="@drawable/ic_ac"
                                android:gravity="center"
                                android:maxLines="1"
                                tools:text="NON AC"
                                android:textColor="@color/gray_light"
                                android:textSize="@dimen/_11ssp" />-->
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_package"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/tv_package_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:text="12 hrs | 120.0 kms"
                                android:textStyle="bold"
                                android:textColor="@color/gray_dark"
                                android:textSize="@dimen/_11ssp" />


                            <TextView
                                android:id="@+id/tv_gst_inclusive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Inclusive of GST"
                                android:textStyle="bold"
                                android:textColor="@color/gray_dark"
                                android:textSize="@dimen/_11ssp" />

                        </LinearLayout>






                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/driver"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18ssp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_driver"
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/img_no_profile" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_driver_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="@dimen/_13sdp"
                                    android:text="@string/driver"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15ssp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_driver_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="@dimen/_13sdp"
                                    android:text="@string/your_adress"
                                    android:textColor="@color/gray_light"
                                    android:textSize="@dimen/_12ssp" />

                                <androidx.appcompat.widget.AppCompatRatingBar
                                    android:id="@+id/ratingbar"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:isIndicator="false"
                                    android:numStars="6"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:rating="3"
                                    android:scaleX="0.8"
                                    android:scaleY="0.8" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


