<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/otp_active_box"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivCar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/demo_car"/>
    <TextView
        android:id="@+id/tv_car_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_10sdp"
        android:gravity="center"
        android:text="@string/name"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:textSize="@dimen/_20ssp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light3"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_seats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:drawablePadding="@dimen/_8sdp"
            android:textStyle="bold"
            android:paddingStart="@dimen/_10sdp"
            android:drawableLeft="@drawable/icon_seat"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/_11ssp" />
        <TextView
            android:id="@+id/tv_fuel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:paddingStart="@dimen/_10sdp"
            android:drawableLeft="@drawable/ic_fuel"
            android:drawablePadding="@dimen/_8sdp"
            android:text="-"
            android:textStyle="bold"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/tv_car_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-"
            android:visibility="gone"
            android:textStyle="bold"
            android:paddingStart="@dimen/_10sdp"
            android:drawableLeft="@drawable/ic_booking"
            android:drawableTint="@color/gray_light"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/tv_manual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="@dimen/_10sdp"
            android:drawablePadding="@dimen/_8sdp"
            android:text="-"
            android:textStyle="bold"
            android:paddingStart="@dimen/_10sdp"
            android:drawableLeft="@drawable/icon_manual"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/_11ssp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="-"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_18ssp" />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDone"
        android:layout_gravity="center"
        android:paddingHorizontal="@dimen/_60sdp"
        android:layout_margin="@dimen/_20sdp"
        android:text="@string/continuee"
        android:textSize="@dimen/_15ssp"
        app:cornerRadius="@dimen/_8sdp" />

</LinearLayout>