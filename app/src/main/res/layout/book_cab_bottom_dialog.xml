<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/_10sdp"
    android:backgroundTint="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/primary"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_margin="@dimen/_6sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:src="@drawable/icn_arrow_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:text="@string/book_a_cab"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />

            </LinearLayout>

            <EditText
                android:id="@+id/etLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icn_location"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/edit_text_shape"
                android:hint="@string/your_adress"
                android:textSize="@dimen/_12ssp"
                android:padding="@dimen/_10sdp" />

            <EditText
                android:id="@+id/etserach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icn_search"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/edit_text_shape"
                android:hint="@string/search_your_location"
                android:textSize="@dimen/_12ssp"
                android:padding="@dimen/_10sdp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSetLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_track_location"
                android:paddingVertical="@dimen/_7sdp"
                android:paddingHorizontal="@dimen/_50sdp"
                android:text="@string/set_location_on_map"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/_12ssp"
                app:cornerRadius="@dimen/_20sdp"
                app:strokeColor="@color/gray_text"
                app:strokeWidth="@dimen/_1sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/primary"
                    android:drawableLeft="@drawable/ic_home"
                    android:paddingVertical="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:text="@string/home"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    app:cornerRadius="@dimen/_20sdp"
                    app:strokeColor="@color/gray_text"
                    app:strokeWidth="@dimen/_1sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/primary"
                    android:drawableLeft="@drawable/ic_shop"
                    android:paddingVertical="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:text="@string/shop"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    app:cornerRadius="@dimen/_20sdp"
                    app:strokeColor="@color/gray_text"
                    app:strokeWidth="@dimen/_1sdp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOffice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/primary"
                    android:drawableLeft="@drawable/ic_office"
                    android:paddingVertical="@dimen/_7sdp"
                    android:text="@string/office"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    app:cornerRadius="@dimen/_20sdp"
                    app:strokeColor="@color/gray_text"
                    app:strokeWidth="@dimen/_1sdp" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_7sdp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:paddingVertical="@dimen/_7sdp"
                android:text="@string/done"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                app:cornerRadius="@dimen/_20sdp" />


        </LinearLayout>

</androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/rv_locations"/>
    </LinearLayout>


    </androidx.cardview.widget.CardView>

