     <LinearLayout
         android:id="@+id/lv_pick_location"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="@dimen/_10sdp"
         android:layout_margin="@dimen/_10sdp"
         android:background="@drawable/edit_text_shape"
         android:orientation="horizontal">

         <ImageView
             android:layout_width="@dimen/_17sdp"
             android:layout_height="@dimen/_17sdp"
             android:layout_gravity="center"
             android:src="@drawable/ic_vehicle"/>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="@dimen/_10sdp"
             android:orientation="vertical">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/from"
                 android:textColor="@color/gray_light"
                 android:textSize="@dimen/_9ssp"/>
             <TextView
                 android:id="@+id/tvFrom"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:maxLines="1"
                 android:ellipsize="end"
                 android:hint="@string/enter_pickup_location"
                 android:textColor="@color/gray_light"
                 android:textSize="@dimen/_12ssp"/>
         </LinearLayout>

     </LinearLayout>
     <LinearLayout
         android:id="@+id/lv_drop_location"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="@dimen/_10sdp"
         android:layout_margin="@dimen/_10sdp"
         android:background="@drawable/edit_text_shape"
         android:orientation="horizontal">

         <ImageView
             android:layout_width="@dimen/_17sdp"
             android:layout_height="@dimen/_17sdp"
             android:layout_gravity="center"
             android:src="@drawable/ic_vehicle"/>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="@dimen/_10sdp"
             android:orientation="vertical">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/to"
                 android:textColor="@color/gray_light"
                 android:textSize="@dimen/_9ssp"/>
             <TextView
                 android:id="@+id/tvTo"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:maxLines="1"
                 android:ellipsize="end"
                 android:hint="@string/enter_your_destination"
                 android:textColor="@color/gray_light"
                 android:textSize="@dimen/_12ssp"/>
         </LinearLayout>

     </LinearLayout>
     <LinearLayout
         android:id="@+id/lv_pick_date"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="@dimen/_10sdp"
         android:layout_margin="@dimen/_10sdp"
         android:background="@drawable/edit_text_shape"
         android:orientation="horizontal">

         <ImageView
             android:layout_width="@dimen/_15sdp"
             android:layout_height="@dimen/_15sdp"
             android:layout_gravity="center"
             android:src="@drawable/ic_calender"/>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="@dimen/_10sdp"
             android:orientation="vertical">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/pickup_date"
                 android:textColor="@color/gray_light"
                 android:textSize="@dimen/_9ssp"/>
             <TextView
                 android:id="@+id/tv_pick_date"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:maxLines="1"
                 android:ellipsize="end"
                 android:hint="@string/choose_your_date_of_journey"
                 android:textColor="@color/gray_light"
                 android:textSize="@dimen/_12ssp"/>
         </LinearLayout>

     </LinearLayout>
     <LinearLayout
         android:id="@+id/llJourneyTime"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="@dimen/_10sdp"
         android:layout_margin="@dimen/_10sdp"
         android:background="@drawable/edit_text_shape"
         android:orientation="horizontal">

         <ImageView
             android:layout_width="@dimen/_15sdp"
             android:layout_height="@dimen/_15sdp"
             android:layout_gravity="center"
             android:src="@drawable/ic_clock"/>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="@dimen/_10sdp"
             android:orientation="vertical">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/pickup_time"
                 android:textColor="@color/gray_light"
                 android:textSize="@dimen/_9ssp"/>
             <TextView
                 android:id="@+id/tvJourneyTime"
                 android:layout_width="match_parent"
                 android:maxLines="1"
                 android:ellipsize="end"
                 android:layout_height="wrap_content"
                 android:hint="@string/choose_your_time_of_journey"
                 android:textColor="@color/gray_light"
                 android:textSize="@dimen/_12ssp"/>
         </LinearLayout>

     </LinearLayout>

     <com.google.android.material.button.MaterialButton
         android:id="@+id/btn_explore_cabs"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/explore_cabs"
         android:textSize="@dimen/_15ssp"
         app:cornerRadius="@dimen/_8sdp"
         android:textStyle="bold"
         android:layout_marginVertical="@dimen/_8sdp"
         android:layout_marginHorizontal="@dimen/_20sdp"
         android:paddingVertical="@dimen/_8sdp"/>

 </LinearLayout>

</androidx.core.widget.NestedScrollView>