<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/primary"
    tools:context=".ui.activity.ProfileVerificationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/ic_self"
            app:tint="@color/white"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_gravity="center"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_27sdp"
                                android:layout_height="@dimen/_27sdp"
                                app:cardBackgroundColor="@color/primary"
                                app:cardCornerRadius="@dimen/_30sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/_10sdp"
                                android:text="@string/upload_driving_licence"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:background="@color/gray" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnUploadDl"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_32sdp"
                                android:layout_marginVertical="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/_25sdp"
                                android:text="@string/upload"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:cornerRadius="@dimen/_5sdp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_27sdp"
                                android:layout_height="@dimen/_27sdp"
                                app:cardBackgroundColor="@color/primary"
                                app:cardCornerRadius="@dimen/_30sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="2"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/_10sdp"
                                android:text="@string/uplaod_aadhar"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:background="@color/gray" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnUploadAdhar"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_32sdp"
                                android:layout_marginVertical="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/_25sdp"
                                android:text="@string/upload"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:cornerRadius="@dimen/_5sdp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_27sdp"
                                android:layout_height="@dimen/_27sdp"
                                app:cardBackgroundColor="@color/primary"
                                app:cardCornerRadius="@dimen/_30sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="3"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/_10sdp"
                                android:text="@string/upload_working_proof_job_college_id_card_business_proof"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:background="@color/gray" />


                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnUploadWorkingId"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_32sdp"
                                android:layout_marginVertical="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/_25sdp"
                                android:text="@string/upload"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:cornerRadius="@dimen/_5sdp" />

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_27sdp"
                                android:layout_height="@dimen/_27sdp"
                                app:cardBackgroundColor="@color/primary"
                                app:cardCornerRadius="@dimen/_30sdp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="4"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/_10sdp"
                                android:text="@string/upload_voter_id_or_electricity_bill"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:visibility="gone"
                                android:layout_marginStart="@dimen/_12sdp"
                                android:background="@color/gray" />


                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnUploadOtherDoc"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_32sdp"
                                android:layout_marginVertical="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/_40sdp"
                                android:text="@string/upload"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                app:cornerRadius="@dimen/_5sdp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_3_easy_steps_to_verify_profile"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp"
                app:cornerRadius="@dimen/_10sdp"
                android:backgroundTint="@color/black"
                android:layout_marginBottom="@dimen/_minus30sdp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_7sdp"
            android:textSize="@dimen/_12ssp"
            android:layout_gravity="end"
            app:iconTint="@color/primary_dark3"
            app:icon="@drawable/ic_logout"
            android:textColor="@color/primary_dark3"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_10sdp"
            android:backgroundTint="@color/primary_light6"
            android:text="@string/skip_for_now"
            app:cornerRadius="@dimen/_6sdp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_40sdp"
            android:paddingVertical="@dimen/_7sdp"
            android:visibility="gone"
            android:textSize="@dimen/_15ssp"
            android:layout_gravity="end"
            android:textColor="@color/primary_dark3"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_10sdp"
            android:backgroundTint="@color/primary_light6"
            android:text="@string/next"
            app:cornerRadius="@dimen/_6sdp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>