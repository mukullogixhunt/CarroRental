<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.BookingDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_10sdp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            app:navigationIcon="@drawable/icn_arrow_back"
            app:navigationIconTint="@color/white"
            app:titleTextColor="@color/white"
            tools:title="Booking Details" />

        <!-- Booking Status and ID Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_4sdp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingVertical="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tv_booking_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        tools:text="Booking ID: CR00020" />

                    <TextView
                        android:id="@+id/tv_booking_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        tools:background="@drawable/bg_status_cancelled"
                        tools:text="Cancelled"
                        tools:textColor="@color/red" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_live_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_live_location"
                        app:tint="@color/green" />

                    <TextView
                        android:id="@+id/tvLiveLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:text="@string/live_location_car"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Trip Details Card -->
        <TextView
            style="@style/SectionHeader"
            android:text="@string/trip_details" />

        <com.google.android.material.card.MaterialCardView style="@style/DetailCard">

            <LinearLayout style="@style/DetailCard.Container">

                <include
                    android:id="@+id/row_service_name"
                    layout="@layout/layout_detail_row" />

                <include
                    android:id="@+id/row_branch_name"
                    layout="@layout/layout_detail_row" />

                <include
                    android:id="@+id/row_pickup_location"
                    layout="@layout/layout_detail_row" />

                <include
                    android:id="@+id/row_drop_location"
                    layout="@layout/layout_detail_row" />

                <include
                    android:id="@+id/row_pickup_datetime"
                    layout="@layout/layout_detail_row" />

                <include
                    android:id="@+id/row_drop_datetime"
                    layout="@layout/layout_detail_row" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Fleet Details Card -->
        <TextView
            style="@style/SectionHeader"
            android:text="@string/fleet_details" />

        <com.google.android.material.card.MaterialCardView style="@style/DetailCard">

            <LinearLayout style="@style/DetailCard.Container">

                <ImageView
                    android:id="@+id/iv_car_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/demo_car" />

                <include
                    android:id="@+id/row_car_name"
                    layout="@layout/layout_detail_row" />

                <include
                    android:id="@+id/row_car_type"
                    layout="@layout/layout_detail_row" />

                <include
                    android:id="@+id/row_car_specs"
                    layout="@layout/layout_detail_row" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Chauffeur Details Card -->
        <TextView
            android:id="@+id/chauffeur_details_header"
            style="@style/SectionHeader"
            android:text="@string/chauffeur_details" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/chauffeur_details_card"
            style="@style/DetailCard">

            <LinearLayout
                android:id="@+id/layout_driver_assigned"
                style="@style/DetailCard.Container"
                android:visibility="gone"
                tools:visibility="visible">

                <include
                    android:id="@+id/row_driver_name"
                    layout="@layout/layout_detail_row" />

                <include
                    android:id="@+id/row_driver_mobile"
                    layout="@layout/layout_detail_row" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_call_driver"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:text="@string/call"
                        app:icon="@drawable/ic_call"
                        app:strokeColor="@color/primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_message_driver"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:text="@string/message"
                        app:icon="@drawable/ic_message" />
                </LinearLayout>


            </LinearLayout>

            <!-- Message for WHEN a driver is NOT assigned -->
            <TextView
                android:id="@+id/tv_no_driver_assigned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_20sdp"
                android:text="@string/chauffeur_not_yet_assigned"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/_11ssp"
                android:visibility="gone"
                tools:visibility="gone" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Payment Details Card -->
        <TextView
            style="@style/SectionHeader"
            android:text="@string/payment_details" />

        <com.google.android.material.card.MaterialCardView style="@style/DetailCard">

            <LinearLayout style="@style/DetailCard.Container">

                <include
                    android:id="@+id/row_base_price"
                    layout="@layout/layout_detail_row" />

                <include
                    android:id="@+id/row_base_distance"
                    layout="@layout/layout_detail_row" />

                <include
                    android:id="@+id/row_pickup_fee"
                    layout="@layout/layout_detail_row" />

                <include
                    android:id="@+id/row_fastag"
                    layout="@layout/layout_detail_row" />

                <include
                    android:id="@+id/row_deposit"
                    layout="@layout/layout_detail_row" />

                <include
                    android:id="@+id/row_coupon"
                    layout="@layout/layout_detail_row" />

                <View style="@style/Divider" />

                <include
                    android:id="@+id/row_total"
                    layout="@layout/layout_detail_row" />

                <include
                    android:id="@+id/row_paid"
                    layout="@layout/layout_detail_row" />

                <include
                    android:id="@+id/row_remaining"
                    layout="@layout/layout_detail_row" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_subscription_header"
            style="@style/SectionHeader"
            android:text="Subscription Payment Details"
            android:visibility="gone"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_subscription_payments"
            style="@style/DetailCard"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <!-- Table Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_6sdp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="Sno."
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="Date"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Price"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Status"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Action"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View style="@style/Divider" />

                <!-- Dynamic List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_subscription_payments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_subscription_payment" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- Bottom Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_emergency_call"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_weight="1"
                android:text="@string/_24_x_7_helpline"
                app:strokeColor="@color/primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_bill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_weight="1"
                android:text="@string/view_bill" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:text="@string/add_remark"
            android:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_upload_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:text="@string/upload_images"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:text="@string/after_complete_ride_your_bill_send_your_mail_id"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/_10ssp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>